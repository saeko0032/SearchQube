<Page x:Class="SearchQube.Views.BurrowOrReturnView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Burrow or Return" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Burrow or Return?" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,0" />
        <Button Grid.Row="1" Grid.Column="0" Content="Burrow" Width="100" Height="30" Margin="0,10,0,0" Click="BurrowButton_Click" />
        <Button Grid.Row="1" Grid.Column="1" Content="Return" Width="100" Height="30" Margin="0,10,0,0" Click="ReturnButton_Click" />
    </Grid>
</Page>
